<?xml version="1.0" encoding="UTF-8"?>
<persistence
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="2.1"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="planinhaPU" transaction-type="JTA">
  	<jta-data-source>java:jboss/datasources/planinhaDS</jta-data-source>
  	
    <class>com.github.brunoabdon.gastoso.Conta</class>
    <class>com.github.brunoabdon.gastoso.Fato</class>
    <class>com.github.brunoabdon.gastoso.Lancamento</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
  	
    <properties>
      <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
      <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect"/>
      <property name="javax.persistence.schema-generation.database.action" value="none"/>
    </properties>
  </persistence-unit>
</persistence>
